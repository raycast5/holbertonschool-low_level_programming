CC = gcc
SRC = main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: $(OBJ) m.h

	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean:

	$(RM) *~ $(NAME)

.PHONY: oclean
oclean:

	$(RM) $(OBJ)

.PHONY: fclean
fclean: oclean clean


.PHONY: re
re: oclean all
